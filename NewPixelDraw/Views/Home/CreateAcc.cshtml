
@model NewPixelDraw.Data.ApplicationDB


<style>

    body {
        background-image: linear-gradient(to right, rebeccapurple, rgb(224, 123, 0));
    }

    .divform {
        position: absolute;
        background-color: rebeccapurple;
        width: 25%;
        height: 60%;
        left: 25%;
        top: 15%;
    }

    .divrightform {
        position: absolute;
        background-color: rgb(224, 123, 0);
        width: 25%;
        height: 60%;
        left: 50%;
        top: 15%;
    }

    .INPUT {
        background-color: rebeccapurple;
        border-top: none;
        border-bottom: 2px solid #9932CC;
        border-left: none;
        border-right: none;
        outline: 0;
        width: 55%;
        position: static;
        left: 10%;
        margin-top: 10%;
    }

    .Forggoten {
        border: 4px solid mediumpurple;
        background-color: white;
        position: absolute;
        width: 100%;
        height: 20%;
        top: 50%;
        display: none;
        border-radius: 4px;
    }

    .INPUTlog {
        background-color: rgb(224, 123, 0);
        border-top: none;
        border-bottom: 2px solid rgb(255, 159, 0);
        border-left: none;
        border-right: none;
        outline: 0;
        width: 55%;
        position: static;
        left: 10%;
        margin-top: 10%;
    }

    .button {
        position: static;
        background-color: hotpink;
        color: #9932CC;
        padding: 1% 2%;
        border: 2px solid #9932CC;
        border-radius: 4px;
        margin-top: 4%;
        left: 10%;
        transition: color 0.3s,background-color 0.4s;
    }

    .button2 {
        position: static;
        background-color: rgb(255, 217, 5);
        color: #9932CC;
        padding: 1% 2%;
        border: 2px solid rgb(255, 159, 0);
        border-radius: 4px;
        transition: color 0.3s,background-color 0.4s;
        margin-top: 4%;
        left: 10%;
    }

    .Word {
        position: static;
        left: 20%;
        color: rgb(255, 159, 0);
        font-size: 400%;
    }

    .Words {
        position: static;
        left: 20%;
        color: rebeccapurple;
        font-size: 400%;
    }

    .X {
        position: absolute;
        left: 95%;
        color: orangered;
    }

    .ButtonX {
        cursor: pointer;
        position: absolute;
        background-color: hotpink;
        color: white;
        padding: 1% 2%;
        border: 2px solid #9932CC;
        border-radius: 4px;
        margin-top: 4%;
        left: 70%;
        top: 50%;
        transition: color 0.3s,background-color 0.4s;
    }

    .INPUTX {
        background-color: white;
        border-top: none;
        border-bottom: 2px solid #9932CC;
        border-left: none;
        border-right: none;
        width: 50%;
        position: absolute;
        left: 5%;
        font-size: 10px;
        top: 70%;
    }

    .ButtonX:hover {
        background-color: #9932CC;
        color: white;
    }

    .button:hover {
        background-color: #9932CC;
        color: white;
    }

    .button2:hover {
        background-color: rgb(255, 159, 0);
        color: white;
    }

    .focus .Small {
        transform: translateY(-25%);
        font-size: 13px;
    }

    .focused .form-label {
        transform: translateY(-5%);
        font-size: .75em;
    }

    ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        color: hotpink;
        transition: transform 0.4s, color 0.4s;
    }

    .focus ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        color: #9400D3;
        transform: translateY(-35%);
    }

    .blur ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        color: hotpink;
        transform: translateY(0%);
    }

    .ar ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        color: rgb(255, 217, 5);
        transition: transform 0.4s, color 0.4s;
    }

    .focuslog ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        color: rgb(255, 159, 0);
        transform: translateY(-35%);
    }

    .blurlog ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        color: rgb(255, 217, 5);
        transform: translateY(0%);
    }

    @@media only screen and (max-width: 600px) {
        .ButtonX {
            position: absolute;
            background-color: hotpink;
            color: white;
            padding: 1% 2%;
            border: 2px solid #9932CC;
            border-radius: 4px;
            margin-top: 4%;
            left: 70%;
            top: 60%;
            transition: color 0.3s,background-color 0.4s;
        }

        .Words {
            color: rebeccapurple;
            position: static;
            margin-top: 30%;
            font-size: 300%;
        }

        .Word {
            position: static;
            margin-top: 30%;
            color: red;
            font-size: 300%;
            color: rgb(255, 159, 0);
        }

        .INPUT {
            background-color: rebeccapurple;
            border-top: none;
            border-bottom: 2px solid #9932CC;
            border-left: none;
            border-right: none;
            width: 50%;
            position: static;
            left: 10%;
            font-size: 10px;
            margin-top: 10%;
        }

        .INPUTlog {
            background-color: rgb(224, 123, 0);
            border-top: none;
            border-bottom: 2px solid rgb(255, 159, 0);
            border-left: none;
            border-right: none;
            width: 50%;
            position: static;
            left: 10%;
            font-size: 10px;
            margin-top: 10%;
        }

        .divform {
            position: absolute;
            background-color: rebeccapurple;
            width: 50%;
            height: 100%;
            left: 0%;
            top: 0%;
        }

        .divrightform {
            position: absolute;
            background-color: rgb(224, 123, 0);
            width: 50%;
            height: 100%;
            left: 50%;
            top: 0%;
        }
    }
</style>

<div class="divform">
    <form id="posts" name="posts" method="post">
        <p class="Word">Reg</p>

        @if ( ViewBag.Usernameisnotcurrect == "Your Acount is ready to use")
        {
            <p style="color:mediumspringgreen">error:@ViewBag.Usernameisnotcurrect</p>
        }
        @if (ViewBag.Usernameisnotcurrect != null && ViewBag.Usernameisnotcurrect != "Your Acount is ready to use")
        {
            <p style="color:red">error:@ViewBag.Usernameisnotcurrect</p>
        }
        @if (ViewBag.Emailalready != null)
        {
            <p style="color:red">error:@ViewBag.Emailalready</p>
        }
        <div class="form-group ">

            @{
                //string user, string password, string userlog, string passwordlog, string Email, string forgotten

            }
            <input name="user" placeholder="Username" class="INPUT" required />
        </div>
        <div class="form-group ">

            <input type="password" name="password" class="INPUT" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" placeholder="Password" required />
        </div>
        <div class="form-group ">

            <input type="email" name="Email" class="INPUT" placeholder="Email" />
        </div>
        <br />
        <button class="button">Sumbit</button>
    </form>
</div>

<div class="divrightform">
    <form id="posts" name="posts" method="post">
        <p class="Words">Log</p>
        <div class="form-group ar">

            <input class="INPUTlog" name="userlog" placeholder="Username" id="userlog" required>
        </div>

        <div class="form-group ar">

            <input class="INPUTlog" type="password" name="passwordlog" id="passwordlog" placeholder="Password" required>
        </div>

        <p id="Forgottenpassword" onclick="Show()">
            forgotten password
        </p>

        <button class="button2" id="Sumbit">Sumbit</button>

    </form>
    @if (ViewBag.Emailisnotfound == null)
    {
        <form name="posts" method="post" id="Forggoten" class="Forggoten">

            <p class="X" onclick="Hide()">X</p>
            <div class="form-group ">
                @if (ViewBag.Emailisnotfound != null)
                {
                    <p style="color:red">Error:@ViewBag.Emailisnotfound</p>
                }
                <input class="INPUTX" name="forgotten" placeholder="Email" />
                <button class="ButtonX">Sumbit</button>
            </div>
        </form>

    }

    @if (ViewBag.Emailisnotfound != null)
    {
        <form name="posts" method="post" id="Forggoten" class="Forggoten" style="display:inline">

            <p class="X" onclick="Hide()">X</p>
            <div class="form-group ">
                @if (ViewBag.Emailisnotfound != null)
                {
                    <p style="color:red">Error:@ViewBag.Emailisnotfound</p>
                }
                <input class="INPUTX" name="forgotten" placeholder="Email" />
                <button class="ButtonX">Sumbit</button>
            </div>
        </form>



    }
</div>






    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>

    <script>

        $('input').focus(function () {
            $(this).css("border-bottom", "2px solid hotpink");

            $(this).parents('.form-group').removeClass("blur").addClass("focus");
        })

        $('input').blur(function () {
            $(this).css("border-bottom", "2px solid #9932CC");

            $(this).parents('.form-group').removeClass("focus").addClass("blur");
        })


        $('#userlog').focus(function () {
            $(this).css("border-bottom", "2px solid rgb(255, 217, 5)");

            $(this).parents('.form-group').removeClass("blurlog").addClass("focuslog");
        })
        $('#passwordlog').focus(function () {
            $(this).css("border-bottom", "2px solid rgb(255, 217, 5)");

            $(this).parents('.form-group').removeClass("blurlog").addClass("focuslog");
        })

        $('#passwordlog').blur(function () {
            $(this).css("border-bottom", "2px solid rgb(255, 159, 0)");

            $(this).parents('.form-group').removeClass("focuslog").addClass("blurlog");
        })
        $('#userlog').blur(function () {
            $(this).css("border-bottom", "2px solid rgb(255, 159, 0)");

            $(this).parents('.form-group').removeClass("focuslog").addClass("blurlog");
        })
        function Show() {
            $("#Forggoten").css("display", "block");
        }
        function Hide() {
            $("#Forggoten").css("display", "none");
        }

    </script>
