        var green = 51;
        var blue = 153;
        var down = 0;
        document.addEventListener("mousedown", mouseDown);
        document.addEventListener("mouseup", mouseUp);


        function fuctions() {
            var s = "rgb(" + red.toString() + "," + green.toString() + "," + blue.toString() + ")";
