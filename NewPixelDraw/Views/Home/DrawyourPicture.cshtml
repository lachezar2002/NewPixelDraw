    {
        TempData["msg"] = "<script>alert('Change browser on Chrome');</script>";
        @Html.Raw(TempData["msg"])
    }
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>

    <script>

